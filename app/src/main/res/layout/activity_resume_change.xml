<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvchID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="아이디"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvchResume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="님의 이력서 수정"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chTitle"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="제목"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/edtchTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="이력서의 제목을 입력하세요"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvch1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="학력"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/edtchAcademic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/intro" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvch2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="경력"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/edtchCareer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/intro" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvch3"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="자기\n소개"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/edtchIntroduction"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/intro" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvch4"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="자격\n사항"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/edtchCertificate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/intro" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvch5"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="교육\n사항"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/edtchEducation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/intro" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvch6"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="희망\n근무\n직군"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/edtchDesire"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/intro" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonchSubmit_temporary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="임시저장" />

            <Button
                android:id="@+id/buttonchSubmit_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="작성완료" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
